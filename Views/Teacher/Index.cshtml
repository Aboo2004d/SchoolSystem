@model IEnumerable<SchoolSystem.Data.Teacher>

@{
    ViewData["Title"] = "Index";
}
<br>
<br>
<br>
<h1>Index</h1>
@{
    var role = Context.Session.GetString("Role");
    if(role == "admin"){
        <div>
            <a class="btn btn-success" asp-action="Create">Create New Teacher</a>
            <a class="btn btn-dark" asp-controller="Menegar" asp-action="Index">Back to the list</a>
        </div>

    }

}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(role == "admin"){
           @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-info" asp-action="ManagerTeacher" asp-route-teacherId="@item.Id">Manager</a>
                        <a class="btn btn-danger delete" data-id="@item.Id">Delete</a>
                        
                    </td>
                </tr>
                
            } 
        }else{
            @foreach (var item in Model) {
                var email = Context.Session.GetString("Email");
                @if(email == item.Email){
                    <tr>
                        <td>
                            role == "admin"
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @if(role == "admin"){
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-info" asp-action="ManagerTeacher" asp-route-teacherId="@item.Id">Manager</a>
                                <a class="btn btn-danger delete" data-id="@item.Id">Delete</a>
                            }
                        </td>
                    </tr>
                }
            }
        }

    </tbody>
</table>

<form asp-action="Delete" id="DeleteTeacher" >
    <input type="hidden" name="Id" id="teacherid" />
</form>

@section Scripts {
    <script>
        $(function() {
            // تفعيل DataTable
            new DataTable('.table');
            
            // التعامل مع زر الحذف
            $('.delete').click(function(e) {
                e.preventDefault();

                var btn = $(this);
                var id = btn.data('id');

                // استخدام SweetAlert لتأكيد الحذف
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // وضع الـ id في الحقل المخفي
                        $('#teacherid').val(id);

                        // تقديم النموذج
                        $('#DeleteTeacher').submit();

                        // إظهار رسالة النجاح
                        Swal.fire({
                            title: "Deleted!",
                            text: "Teacher has been deleted.",
                            icon: "success"
                        });
                    }
                });
            });
        });
    </script>
}