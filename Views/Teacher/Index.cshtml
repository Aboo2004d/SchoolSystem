@model IEnumerable<SchoolSystem.Data.Teacher>

@{
    ViewData["Title"] = "Index";
}
<br>
<br>
<br>
<h1>Index</h1>
@{
    var role = Context.Session.GetString("Role");
    if(role == "admin"){
        <div>
            <a class="btn btn-success" asp-action="Create">Create New Teacher</a>
            <a class="btn btn-dark" asp-controller="Menegar" asp-action="Index">Back to the list</a>
        </div>

    }

}
<table class="table">
    <thead>
        <tr>
            <th class="w-75 w-sm-20">
                Name
            </th>
            <th class="d-none d-sm-table-cell">
                Phone
            </th>
            <th >
                Email
            </th>
            <th class="w-25 w-sm-40">@if(role == "admin"){
                <span>Optiones</span>
                }</th>
        </tr>
    </thead>
    <tbody>
        @if(role == "admin"){
           @foreach (var item in Model) {
                <tr>
                    <td class="w-75 w-sm-20">
                        @{
                            var fullname = item.Name.Split(' ');
                            var firstName = fullname.FirstOrDefault();
                            var lastName = fullname.LastOrDefault();
                            if(fullname.Length > 1){
                                lastName = fullname.LastOrDefault();
                                <p>@firstName - @lastName</p> 
                            }else{
                                @firstName
                            }
                        }
                    </td>
                    <td class="d-none d-sm-table-cell">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td >
                        @{
                            if(item.Email != null){
                                var emailParts = item.Email.Split('@');
                                var emailName = emailParts[0];
                                var emailDomain = emailParts[1];
                                string visibleName = new string(emailName.Take(3).ToArray());

                                // الجزء الأخير من النطاق
                                var lastDomainPart = emailDomain.Split('.').Last();

                                // الطباعة في سطر واحد:
                                <text>@visibleName***@@***.@lastDomainPart</text>
                                } 
                        }
                    </td>
                    
                    <td class="w-25 w-sm-40">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Manager
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item"  asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                                <li><a class="dropdown-item"  asp-action="ManagerTeacher" asp-route-teacherId="@item.Id">Manager</a></li>
                                <li><a class="dropdown-item" data-id="@item.Id">Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
                
            } 
        }else{
            @foreach (var item in Model) {
                var email = Context.Session.GetString("Email");
                @if(email == item.Email){
                    <tr>
                        <td class="w-75 w-sm-20">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="d-none d-sm-table-cell">
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td class="d-none d-sm-table-cell">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="w-25 w-sm-40">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Manager
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    @if(role == "admin"){
                                        <a class="btn btn-warning" style="width: 30%;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a class="btn btn-info" style="width: 30%; asp-action="ManagerTeacher" asp-route-teacherId="@item.Id">Manager</a>
                                        <a class="btn btn-danger delete" style="width: 30%;" data-id="@item.Id">Delete</a>
                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            }
        }

    </tbody>
</table>

<form asp-action="Delete" id="DeleteTeacher" >
    <input type="hidden" name="Id" id="teacherid" />
</form>

@section Scripts {
    <script>
        $(function() {
            // تفعيل DataTable
            new DataTable('.table');
            
            // التعامل مع زر الحذف
            $('.delete').click(function(e) {
                e.preventDefault();

                var btn = $(this);
                var id = btn.data('id');

                // استخدام SweetAlert لتأكيد الحذف
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // وضع الـ id في الحقل المخفي
                        $('#teacherid').val(id);

                        // تقديم النموذج
                        $('#DeleteTeacher').submit();

                        // إظهار رسالة النجاح
                        Swal.fire({
                            title: "Deleted!",
                            text: "Teacher has been deleted.",
                            icon: "success"
                        });
                    }
                });
            });
        });
    </script>
}