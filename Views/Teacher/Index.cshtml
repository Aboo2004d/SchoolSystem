@model IEnumerable<SchoolSystem.Data.Teacher>

@{
    ViewData["Title"] = "Index";
}
<br>
<br>
<br>
<h1>Index</h1>
@{
    var role = Context.Session.GetString("Role");
    if(role == "admin"){
        <div>
            <a class="btn btn-success" asp-action="Create">Create New Teacher</a>
            <a class="btn btn-dark" asp-controller="Menegar" asp-action="Index">Back to the list</a>
        </div>

    }

}
<table class="table">
    <thead>
        <tr style="font-size: smaller;">
            <th class="w-75 w-sm-40">
                Name
            </th>
            <th class="d-none d-sm-table-cell">
                Phone
            </th>
            <th class="w-sm-40">
                Email
            </th>
            <th class="w-25 w-sm-20">Optiones</th>
        </tr>
    </thead>
    <tbody>
        @if(role == "admin"){
           @foreach (var item in Model) {
                <tr>
                    <td class="w-75 w-sm-40">
                        @{
                            var fullname = item.Name.Split(' ');
                            var firstName = fullname.FirstOrDefault();
                            var lastName = fullname.LastOrDefault();
                            if(fullname.Length > 1){
                                lastName = fullname.LastOrDefault();
                                <p>@firstName - @lastName</p> 
                            }else{
                                @firstName
                            }
                        } 
                    </td>
                    <td class="d-none d-sm-table-cell">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td class="w-sm-40">
                        @{
                            if(item.Email != null){
                                var emailParts = item.Email.Split('@');
                                var emailName = emailParts[0];
                                var emailDomain = emailParts[1];
                                string visibleName = new string(emailName.Take(3).ToArray());

                                // الجزء الأخير من النطاق
                                var lastDomainPart = emailDomain.Split('.').Last();

                                // الطباعة في سطر واحد:
                                <text>@visibleName***@@***.@lastDomainPart</text>
                                } 
                        }
                    </td>
                    
                    <td class="w-25 w-sm-40">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Manager
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item"  asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                                <li><a class="dropdown-item"  asp-action="ManagerTeacher" asp-route-teacherId="@item.Id">Manager</a></li>
                                <li><a class="dropdown-item" data-id="@item.Id">Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
                
            } 
        }else{
            @foreach (var item in Model) {
                var email = Context.Session.GetString("Email");
                @if(email == item.Email){
                    <tr>
                        <td class="w-75 w-sm-20">
                            @{
                                var fullname = item.Name.Split(' ');
                                var firstName = fullname.FirstOrDefault();
                                var lastName = fullname.LastOrDefault();
                                if(fullname.Length > 1){
                                    lastName = fullname.LastOrDefault();
                                    <p>@firstName - @lastName</p> 
                                }else{
                                    @firstName
                                }
                            }
                        </td>
                        <td class="d-none d-sm-table-cell">
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td class="w-sm-40">
                            @{
                                if(item.Email != null){
                                    var emailParts = item.Email.Split('@');
                                    var emailName = emailParts[0];
                                    var emailDomain = emailParts[1];
                                    string visibleName = new string(emailName.Take(3).ToArray());

                                    // الجزء الأخير من النطاق
                                    var lastDomainPart = emailDomain.Split('.').Last();

                                    // الطباعة في سطر واحد:
                                    <text>@visibleName***@@***.@lastDomainPart</text>
                                }
                            }
                        </td>
                        <td class="w-25 w-sm-40">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Manager
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>

                                    <!-- قائمة فرعية داخل القائمة الرئيسية -->
                                    <li class="dropdown-submenu">
                                        <a class="dropdown-item toggle-submenu" href="#">Manager</a>
                                        <ul class="dropdown-menu submenu">
                                            <li><a class="dropdown-item back-btn" href="#">← Back</a></li>
                                            <li><a class="dropdown-item" asp-action="ManagerTeacher" asp-route-teacherId="@item.Id">Manager Students</a></li>
                                            <li><a class="dropdown-item" asp-controller="Grades" asp-action="Index" asp-route-teacherId="@item.Id">Marks</a></li>
                                            <li><a class="dropdown-item" asp-controller="Attendance" asp-action="Index" asp-route-idTeacher="@item.Id">Attendance</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            }
        }

    </tbody>
</table>

<form asp-action="Delete" id="DeleteTeacher" >
    <input type="hidden" name="Id" id="teacherid" />
</form>

@section Scripts {
    <script>
        $(function() {
            // تفعيل DataTable
            new DataTable('.table');
            
            // التعامل مع زر الحذف
            $('.delete').click(function(e) {
                e.preventDefault();

                var btn = $(this);
                var id = btn.data('id');

                // استخدام SweetAlert لتأكيد الحذف
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // وضع الـ id في الحقل المخفي
                        $('#teacherid').val(id);

                        // تقديم النموذج
                        $('#DeleteTeacher').submit();

                        // إظهار رسالة النجاح
                        Swal.fire({
                            title: "Deleted!",
                            text: "Teacher has been deleted.",
                            icon: "success"
                        });
                    }
                });
            });
        });
    </script>
    <script>
        document.querySelectorAll('.dropdown-submenu').forEach(item => {
        const toggleBtn = item.querySelector('.toggle-submenu');
        const backBtn = item.querySelector('.back-btn');
        const submenu = item.querySelector('.submenu');

        toggleBtn.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            item.classList.add('show-submenu');
        });

        backBtn.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            item.classList.remove('show-submenu');
        });

        // إغلاق عند النقر خارج القائمة
        document.addEventListener('click', (e) => {
            if (!item.contains(e.target)) {
                item.classList.remove('show-submenu');
            }
        });
    });
    </script>

    <style>
        .dropdown-menu {
            transition: transform 0.3s ease;
        }

        .submenu {
            display: none;
            position: absolute;
            left: 0;
            top: 0;
            min-width: 100%;
            box-shadow: none;
            border: none;
        }

        .dropdown-submenu.show-submenu .submenu {
            display: block;
        }

        .dropdown-submenu.show-submenu .toggle-submenu {
            display: none;
        }

        .back-btn {
            font-weight: bold;
            color: #007bff;
        }
    </style>
}