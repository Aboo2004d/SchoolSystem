@model IEnumerable<SchoolSystem.Data.Lectuer>

@{
    ViewData["Title"] = "Index";
}
<br>
<br>
<br>
<h1>Index</h1>

<p>
    <a class="btn btn-success"  asp-action="Create">Create New</a>
    <a class="btn btn-dark" asp-controller="Menegar" asp-action="Index">Back to List</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Lectuer
            </th>
            <th >
                Students 
            </th>
            <th>
                Teachers 
            </th>
            <th>
            Options
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.NumberOfStudentsInLectuer
            </td>
            <td>
                @item.NumberOfTeacherInLectuer
            </td>
            <td >
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Manager
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                        <li><a class="dropdown-item"  asp-action="ManagerLectuer" asp-route-idLectuer="@item.Id">Students</a></li>
                        <li><a class="dropdown-item" asp-action="ManagerTeacherLectuer" asp-route-idLectuer="@item.Id">Teachers</a></li>
                        <li><a class="dropdown-item"  data-id="@item.Id">Delete</a></li>
                    </ul>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<form asp-action="Delete" id="DeleteLectuer" >
    <input type="hidden" name="Id" id="lectuerid" />
</form>

@section Scripts {
    <script>
        $(function() {
            // تفعيل DataTable
            new DataTable('.table');
            
            // التعامل مع زر الحذف
            $('.delete').click(function(e) {
                e.preventDefault();

                var btn = $(this);
                var id = btn.data('id');

                // استخدام SweetAlert لتأكيد الحذف
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // وضع الـ id في الحقل المخفي
                        $('#lectuerid').val(id);

                        // تقديم النموذج
                        $('#DeleteLectuer').submit();

                        // إظهار رسالة النجاح
                        Swal.fire({
                            title: "Deleted!",
                            text: "Lectuer has been deleted.",
                            icon: "success"
                        });
                    }
                });
            });
        });
    </script>
}