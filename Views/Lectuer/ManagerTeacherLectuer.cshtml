@model IEnumerable<SchoolSystem.Models.LectuerViewModel>

@{
    ViewData["Title"] = "Manager Lectuer";
}
<br>
<br>
<br>
@foreach(var lectuer in Model){
<h1>Teacher Registered with the Lectuer: @lectuer.LectureName</h1>
<br>
<a class="btn btn-success" asp-controller="Lectuer" asp-action="CreateTeacherLectuer" asp-route-idLectuer="@lectuer.IdLectuer">@lectuer.IdLectuer Add Teacher In Lectuer</a>
<a class="btn btn-dark" asp-action="Index">Back to List</a>
break;
}
<br>
@if (Model.Any(m => m.ClassroomName != null))
{

<table class="table">
    <hr/>
    <thead>
        <tr>
            <th>Teacher Name</th>
            <th>Name Class</th>
            <th></th>
        </tr>
    </thead>
    <tbody> 
        @foreach (var teacher in Model)
        {
            <tr >
                <td >
                    @teacher.TeacherName 
                </td>
                <td >
                    @if(teacher.ClassroomName != null){
                        @teacher.ClassroomName
                    }else {
                        <a class="btn btn-success" asp-action="CreateTeacherClass" asp-controller="TeacherClass"  asp-route-idTeacher="@teacher.IdTeacher"asp-route-idLectuer="@teacher.IdLectuer">Add Teacher To Class</a>
                    }
                    
                </td>
                <td >
                    <a class="btn btn-danger delete" data-id="@teacher.Id">Delete</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>
}else{
    
<tr>
    <td colspan="3" class="text-center">No Teacher in this class.</td>
</tr>
}

<form asp-controller="TeacherLectuer" asp-action="Delete" id="DeleteTeacherLectuer" >
    <input type="hidden" name="id" id="teacherlectuerid" />
</form>

@section Scripts {
    <script>
        $(function() {
            // تفعيل DataTable
            new DataTable('.table');
            
            // التعامل مع زر الحذف
            $('.delete').click(function(e) {
                e.preventDefault();

                var btn = $(this);
                var id = btn.data('id');

                // استخدام SweetAlert لتأكيد الحذف
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // وضع الـ id في الحقل المخفي
                        $('#teacherlectuerid').val(id);

                        // تقديم النموذج
                        $('#DeleteTeacherLectuer').submit();

                        // إظهار رسالة النجاح
                        Swal.fire({
                            title: "Deleted!",
                            text: "Teacher has been deleted.",
                            icon: "success"
                        });
                    }
                });
            });
        });
    </script>
}