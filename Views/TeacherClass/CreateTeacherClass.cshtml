@model SchoolSystem.Models.LectuerTeacherViewModel

@{
    ViewData["Title"] = "Create";
}
<br>
<br>
<br>
<h1>Create Teacher At Lectuer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTeacherToClass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdTeacher" class="control-label">@ViewBag.IdLectuer Teacher</label>
                <select asp-for="IdTeacher" class="form-control" asp-items="ViewBag.IdTeach" disabled></select>
                <input type="hidden" asp-for="IdTeacher" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="IdLectuer" value="@ViewBag.IdLectuer" />
            </div>
            <div class="form-group">
                <label asp-for="IdClass" class="control-label">Class</label>
                <select asp-for="IdClass" class ="form-control" asp-items="ViewBag.IdClass"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @{
                    var item = ViewBag.IdLectuer;
                    <a class="btn btn-dark" asp-controller="Lectuer" asp-action="ManagerTeacherLectuer" asp-route-idLectuer="@item">@item Back to List</a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
