@model SchoolSystem.Data.TheClass

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-header text-center bg-primary text-white">
                    <h4 class="mb-0">إنشاء صف جديد</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="control-label">اسم الصف</label>
                            <input asp-for="Name" class="form-control" dir="rtl" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button type="submit" class="btn btn-outline-success">
                                <i class="bi bi-plus"></i> انشاء
                            </button>
                            <a class="btn btn-outline-dark" asp-controller="Menegar" asp-action="ManagerMenegarClassView">
                                <i class="bi bi-arrow-left-circle"></i> عودة</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
