@model SchoolSystem.Models.LectuerTeacherViewModel

@{
    ViewData["Title"] = "إضافة معلم للصف";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-header bg-info text-white text-center">
                    <h4 class="mb-0">إضافة معلم للصف: @ViewBag.NameLectuer</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="CreateTeacherClass" asp-route-idClass="@ViewBag.IdClass">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="IdClass" value="@ViewBag.IdClass" />

                        <div class="mb-3">
                            <label asp-for="IdTeacher" class="form-label fw-bold">المعلم:</label>
                            <select asp-for="IdTeacher" class="form-control select2" asp-items="ViewBag.IdTeacher"></select>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button type="submit" class="btn btn-outline-success px-4">
                                <i class="bi bi-save"></i> حفظ
                            </button>
                            <a class="btn btn-outline-secondary px-4" asp-controller="Menegar" asp-action="ManagerMenegarTeacherInClassView" asp-route-idClass="@ViewBag.IdClass">
                                <i class="bi bi-arrow-left-circle"></i> عودة
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "اختر معلمًا...",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
