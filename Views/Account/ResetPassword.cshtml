@model SchoolSystem.Models.ResetPasswordViewModel


@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <main class="form-signin w-100 m-auto text-center">
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="login-container p-4 shadow rounded">
                <h2 class="text-center mb-4">Reset password</h2>
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="Token" />
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">New Password</label>
                        <input asp-for="NewPassword" type="Password" autocomplete="off" class="form-control input-lg"/>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="Password" autocomplete="off" class="form-control input-lg"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
              </form>
            </div>
        </div>
    </main>