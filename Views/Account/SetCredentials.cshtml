@model SchoolSystem.Models.SetCredentialsViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <main class="form-signin w-100 m-auto text-center">
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="login-container p-4 shadow rounded">
                <h2 class="text-center mb-4">انشاء حساب</h2>
                <form asp-action="SetCredentials" method="post">
                    <input asp-for="name" value="@Model.name" type="hidden" />
                    <input asp-for="Role" value="@Model.Role" type="hidden" />
                    <input asp-for="IdUser" value="@Model.IdUser" type="hidden" />
                    <input asp-for="School" value="@Model.School" type="hidden" />
                    <input asp-for="Email" value="@Model.Email" type="hidden" />
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">اسم المستخدم</label>
                        <input asp-for="UserName" type="Password" autocomplete="off" class="form-control input-lg"/>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">كلمة المرور</label>
                        <input asp-for="Password" type="Password" autocomplete="off" class="form-control input-lg"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                        <input asp-for="ConfirmPassword" type="Password" autocomplete="off" class="form-control input-lg"/>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <button type="submit" class="btn btn-outline-primary w-100">انشاء</button>
              </form>
            </div>
        </div>
    </main>