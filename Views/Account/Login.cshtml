@model SchoolSystem.Models.LoginViewModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .login-wrapper {
        min-height: calc(100vh - 100px); /* اترك مساحة للفوتر */
        display: flex;
        align-items: center;
        justify-content: center;
        padding-bottom: 50px; /* يساعد في دفع المحتوى للأعلى */
    }

    .login-card {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 40px 30px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.6s ease-in-out;
    }

    .login-card h2 {
        margin-bottom: 30px;
        color: #333;
        font-weight: bold;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px 15px;
        font-size: 16px;
    }
    .form-label {
            text-align: right;
            display: block;
        }
    .btn-custom {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        border-radius: 8px;
        padding: 10px;
        transition: background-color 0.3s ease-in-out;
    }

    .btn-custom:hover {
        background-color: #0056b3;
    }

    .text-link {
        font-size: 14px;
    }

    .text-link a {
        color: rgb(0, 110, 255);
        text-decoration: none;
    }

    .text-link a:hover {
        text-decoration: underline;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <h2 class="text-center">تسجيل الدخول</h2>
        <form asp-action="Login" method="post">

            <div class="mb-3 text-start">
                <label asp-for="UserName" dir="rtl" class="form-label">اسم المستخدم</label>
                <input asp-for="UserName" dir="ltr" class="form-control" dir="ltr" />
            </div>

            <div class="mb-3 text-start">
                <label asp-for="Password" dir="rtl" class="form-label">كلمة المرور</label>
                <input asp-for="Password" dir="ltr" type="password" class="form-control" dir="ltr" autocomplete="off" />
            </div>

            <button type="submit" class="btn btn-custom w-100 mt-2">
                <i class="bi bi-box-arrow-in-right"></i> دخول
            </button>

            <div class="text-center text-link mt-3">
                <p>نسيت كلمة المرور؟ <a asp-action="ForgotPassword">إعادة تعيين</a></p>
                <p>لا تملك حساب؟ <a asp-controller="Account" asp-action="Register">تسجيل</a></p>
            </div>
        </form>
    </div>
</div>