@model SchoolSystem.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- تضمين Bootstrap عبر CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto text-center">
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="login-container p-4 shadow rounded">
                <h2 class="text-center mb-4">Please Login</h2>
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="UserNameOrEmail" class="form-label">Username Or Email</label>
                        <input asp-for="UserNameOrEmail"  class="form-control input-lg"/>
                        
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control input-lg"/>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                    <p class="mt-3">Forgot your password? <a asp-action="ForgotPassword">Reset Password</a></p>
                    <p class="mt-3">Don't have an account? <a asp-asp-controller="Account" asp-action="Register">Register</a></p>
                </form>
            </div>
        </div>
    </main>

    <!-- تضمين Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
