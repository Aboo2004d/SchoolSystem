@model SchoolSystem.Data.Grade

@{
    ViewData["Title"] = "علاماتي";
}

<div class="container mt-3">
    <div class="row mb-3">
        <div class="col-12 text-center">
            <h4>علامات الطالب: @ViewBag.name</h4>
            @if ((Context.Session.GetString("Role") ?? "Null") == "admin")
            {
                <a class="btn btn-outline-dark mt-2" asp-action="ManagerMenegarStudentView" asp-controller="Menegar">عودة</a>
            }
            else
            {
                <a class="btn btn-outline-dark mt-2" asp-action="Index" asp-controller="Student" asp-route-StudentId="@ViewBag.IdStd">عودة</a>
            }
        </div>
    </div>

    <hr />

    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center align-middle" id="studentsTable">
            <thead class="table-dark">
                <tr>
                    <th>المادة</th>
                    <th>الشهر الأول</th>
                    <th>النصفي</th>
                    <th>الشهر الثاني</th>
                    <th>النشاط</th>
                    <th>النهائي</th>
                    <th>المجموع</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var idStudent = @Html.Raw(ViewBag.IdStudent);
            $('#studentsTable').DataTable({
                deferRender: true,
                processing: true,
                serverSide: true,
                ajax: {
                    url: "/Grades/DataGradesStudent?studentid=" + idStudent,
                    type: "GET",
                    dataSrc: function (json) {
                        if (json.error) {
                            alert(json.error);
                            window.location.href = "/Account/Login";
                            return [];
                        }
                        return json.data;
                    }
                },
                columns: [
                    { data: "lectuerName" },
                    { data: "firstMonth" },
                    { data: "mid" },
                    { data: "secondMonth" },
                    { data: "activity" },
                    { data: "final" },
                    { data: "total" },
                ],
                "language": {
                    "search": "🔍بحث: ",
                    "lengthMenu": "عرض _MENU_ سجل",
                    "info": "عرض من  _START_ الى _END_ من اصل _TOTAL_ سجل",
                    "paginate": {
                        "next": "الصفحة التالية",
                        "previous": "الصفحة السابقة"
                    },
                    "zeroRecords": "لم يتم العثور على سجلات"
                }
            });
        });
    </script>

    <style>
        body {
            font-size: 14px;
        }

        @@media (max-width: 768px) {
            h4 {
                font-size: 16px;
            }

            table {
                font-size: 12px;
            }

            .btn {
                font-size: 12px !important;
                padding: 6px 10px !important;
            }

            th, td {
                white-space: nowrap;
            }
        }
    </style>
}
