@model SchoolSystem.Data.Student

@{
    ViewData["Title"] = "Add Student To Class";
}

<h1>Add Student To Class</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudentWithClass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@ViewBag.IdStu" />
            <input type="hidden" asp-for="Name" value="@ViewBag.StdName" />
            <input type="hidden" asp-for="IdSchool" value="@ViewBag.IdSchool" />
            <input type="hidden" asp-for="TheDate" value="@ViewBag.TheDate" />
            <input type="hidden" asp-for="City" value="@ViewBag.City" />
            <input type="hidden" asp-for="Area" value="@ViewBag.Area" />
            <input type="hidden" asp-for="Email" value="@ViewBag.Email" />
            <input type="hidden" asp-for="Phone" value="@ViewBag.Phone" />
            <input type="hidden" asp-for="IdNumber" value="@ViewBag.IdNumber" />
            <div class="form-group">
                <label asp-for="IdClass" class="control-label">Class</label>
                <select asp-for="IdClass" class="form-control" asp-items="ViewBag.IdClass" ></select>
            </div>
            <div class="form-group"> 
                <label asp-for="Id" class="control-label">Student name</label>
                <br>
                <input type="text"  value="@ViewBag.StdName" disabled />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"  />
                <a class="btn btn-dark" asp-controller="Menegar" asp-action="ManagerMenegarStudentView" >Back to The List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
