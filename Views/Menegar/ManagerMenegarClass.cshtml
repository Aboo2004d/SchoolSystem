@model IEnumerable<SchoolSystem.Models.MenegarClassViewModel>

@{
    ViewData["Title"] = "Manager Studrnt";
}
<br>
<br>
<br>
<h1>Manager Class</h1>
<hr />
<a class="btn btn-success" asp-controller="TheClass" asp-action="Create" asp-action="Create">Create New Class</a>
<a class="btn btn-dark" asp-action="Index">Back to List</a>
<table class="table">
    <hr/>
    <thead>
        <tr>
            <th>Class</th>
            <th style="font-size: small;">Number of students</th>
            <th>Optiones</th>
        </tr>
    </thead>
    <tbody> 
        @foreach (var TheClass in Model)
        {
            <tr >
                <td >
                    @TheClass.ClassroomName
                </td>
                <td >
                    @TheClass.NumberOfStudents
                </td>
                <td class="w-25 w-sm-40">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            Manager
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <li><a class="dropdown-item" asp-controller="TheClass" asp-action="Edit" asp-route-id="@TheClass.id">Edit</a></li>
                            <li><a class="dropdown-item"  asp-action="ManagerMenegarStudentInClass" asp-route-idClass="@TheClass.id" >Student</a> </li>
                            <li><a class="dropdown-item"  data-id="@TheClass.id">Delete</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-controller="TheClass" asp-action="Delete" id="DeleteClass" >
    <input type="hidden" name="Id" id="classid" />
</form>

@section Scripts {
    <script>
        $(function() {
            // تفعيل DataTable
            new DataTable('.table');
            
            // التعامل مع زر الحذف
            $('.delete').click(function(e) {
                e.preventDefault();

                var btn = $(this);
                var id = btn.data('id');

                // استخدام SweetAlert لتأكيد الحذف
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // وضع الـ id في الحقل المخفي
                        $('#classid').val(id);

                        // تقديم النموذج
                        $('#DeleteClass').submit();

                        // إظهار رسالة النجاح
                        Swal.fire({
                            title: "Deleted!",
                            text: "Teacher has been deleted.",
                            icon: "success"
                        });
                    }
                });
            });
        });
    </script>
}