@model IEnumerable<SchoolSystem.Models.MenegarStudentViewModel>

@{
    ViewData["Title"] = "Manager Studrnt";
}
<br>
<br>

<br>
<div>
    <a class="btn btn-success" asp-controller="Student" asp-action="Create">Create New Student</a>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>

<table class="table">
    <hr/>
    <thead>
        <tr>
            <th >Name Student</th>
            <th style="width: 50%;">Class</th>
            <th style="width: 20%;">Options</th>
        </tr>
    </thead>
    <tbody> 
        @foreach (var student in Model)
        {
            <tr >
                <td >
                    @student.StudentName
                </td>
                <td >
                    @if(student.ClassroomName != null){
                        @student.ClassroomName
                    }else{
                        <a class="btn btn-success" asp-controller="Menegar" asp-action="AddStudentWithClass" asp-route-idstudent="@student.IdStudent">Add Student</a>
                    }
                </td>
                <td >
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Details" asp-route-id="@student.IdStudent">Details</a>
                   <a class="btn btn-danger delete" data-id="@student.IdStudent">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-controller="Student" asp-action="Delete" id="DeleteStudent" >
    <input type="hidden" name="id" id="studentid" />
</form>

@section Scripts {
    <script>
        $(function() {
            // تفعيل DataTable
            new DataTable('.table');
            
            // التعامل مع زر الحذف
            $('.delete').click(function(e) {
                e.preventDefault();

                var btn = $(this);
                var id = btn.data('id');

                // استخدام SweetAlert لتأكيد الحذف
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // وضع الـ id في الحقل المخفي
                        $('#studentid').val(id);

                        // تقديم النموذج
                        $('#DeleteStudent').submit();

                        // إظهار رسالة النجاح
                        Swal.fire({
                            title: "Deleted!",
                            text: "Student has been deleted.",
                            icon: "success"
                        });
                    }
                });
            });
        });
    </script>
}