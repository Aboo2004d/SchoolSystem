@model IEnumerable<SchoolSystem.Data.Attendance>

@{
    ViewData["Title"] = "Index";
}
<br>
<br>
<br>
@foreach (var item in Model) {
    <h4>Attendance to: @item.IdStudentNavigation.Name in class: @item.IdClassNavigation.Name</h4>
    <a class="btn btn-dark" asp-action="Index" asp-controller="Student" asp-route-StudentId="@item.IdStudent">back last</a>
    break;
}

<hr>
<table class="table">
    <thead >
        <tr>
            <th>
                Lectuer
            </th>
            <th>
                Status
            </th>
            <th>
                Date
            </th>
            <th>
                Excuse
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdLectuerNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Excuse)
            </td>
        </tr>
}
    </tbody>
</table>


@section Scripts {
    <script>
        $(function() {
            // تفعيل DataTable
            new DataTable('.table');
        });
    </script>
    <script>
        $(function () {
            var teacherId = '@Model.FirstOrDefault()?.IdTeacher';

            // عند فتح القائمة (Bootstrap Dropdown)
            $('#dropdownNewMark').on('click', function () {
                // تحميل المواد عند أول مرة فقط (يمكنك تحسينه لاحقاً للتحميل مرة واحدة فقط)
                $.getJSON('/Grades/GetSubjectsForTeacher', { teacherId: teacherId }, function (data) {
                    var subjectDropdown = $('#subjectDropdown');
                    subjectDropdown.empty().append('<option value="">Choose</option>');

                    $.each(data, function (i, subject) {
                        subjectDropdown.append($('<option>').val(subject.id).text(subject.name));
                    });
                });
            });

            // عند اختيار مادة
            $('#subjectDropdown').change(function () {
                var subjectId = $(this).val();
                if (!subjectId) return;

                $.getJSON('/Grades/GetGradesForSubject', { teacherId: teacherId, subjectId: subjectId }, function (data) {
                    var gradeDropdown = $('#gradeDropdown');
                    gradeDropdown.empty().append('<option value="">Choose</option>');

                    $.each(data, function (i, grade) {
                        gradeDropdown.append($('<option>').val(grade.id).text(grade.name));
                    });

                    $('#gradeContainer').show();
                });
            });

            // عند اختيار الصف
            $('#gradeDropdown').change(function () {
                var gradeId = $(this).val();
                var subjectId = $('#subjectDropdown').val();

                if (gradeId && subjectId) {
                    // الانتقال إلى صفحة الإنشاء مع القيم
                    window.location.href = `/Grades/Create?teacherId=${teacherId}&subjectId=${subjectId}&gradeId=${gradeId}`;
                }
            });
        });
    </script>
    <style>
        .dropdown-menu select {
            width: 100%;
        }
        /* العرض المضغوط: افتراضي لجميع الأجهزة */
        body {
            font-size: 10px;
        }

        /* إذا كان العرض أكبر من 768px (كمبيوتر أو لابتوب) */
        @@media (min-width: 768px) {
            body {
                font-size: 16px; /* حجم الخط الطبيعي */
            }

            table thead, table tbody {
                font-size: 14px;
            }

            .btn {
                font-size: 14px !important;
                padding: 6px 12px !important;
                height: auto !important;
                min-width: auto !important;
            }

            /* أي عناصر أخرى تم تصغيرها يمكن تعديلها هنا */
        }

    </style>


}
