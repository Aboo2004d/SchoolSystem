@{
    ViewData["Title"] = "الحضور والغياب";
}

<div class="container mt-3">
    <!-- العنوان وزر العودة -->
    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center flex-wrap">
            <h4 class="mb-2">الحضور والغياب في الصف: @ViewBag.StdClass</h4>
            <a class="btn btn-outline-dark mb-2" asp-action="Index" asp-controller="Student">
                <i class="bi bi-arrow-left"></i> عودة
            </a>
        </div>
    </div>

    <hr>

    <!-- جدول الحضور والغياب -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center align-middle" id="attendancesTable">
            <thead class="table-dark">
                <tr>
                    <th>المادة</th>
                    <th>الحالة</th>
                    <th>التاريخ</th>
                    <th>العذر</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var idStudent = @Html.Raw(ViewBag.StdId);
            $('#attendancesTable').DataTable({
                "deferRender": true,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/Attendance/AttendancesStudentData?studentid=" + idStudent,
                    "type": "GET",
                    "dataSrc": function (json) {
                        if (json.error) {
                            alert(json.error);
                            window.location.href = "/Account/Login";
                            return [];
                        }
                        return json.data;
                    }
                },
                "columns": [
                    { "data": "lectuerName" },
                    {
                        "data": "attendanceStatus",
                        "render": function (data) {
                            switch (data) {
                                case '1': return "حضور";
                                case '0': return "غياب";
                                case 'm': return "غياب بعذر";
                                default: return "قيمة غير صالحة";
                            }
                        }
                    },
                    { "data": "dateAndTime" },
                    { "data": "excuse" }
                ],
                "language": {
                    "search": "🔍 بحث: ",
                    "lengthMenu": "عرض _MENU_ سجل",
                    "info": "عرض من _START_ إلى _END_ من أصل _TOTAL_ سجل",
                    "paginate": {
                        "next": "الصفحة التالية",
                        "previous": "الصفحة السابقة"
                    },
                    "zeroRecords": "لم يتم العثور على سجلات"
                }
            });
        });
    </script>

    <!-- تحسينات CSS -->
    <style>
        body {
            font-size: 14px;
            direction: rtl;
            text-align: right;
        }

        @@media (max-width: 768px) {
            h4 {
                font-size: 16px;
            }

            table {
                font-size: 12px;
                overflow-x: auto;
                display: block;
                width: 100%;
            }

            .btn {
                font-size: 12px !important;
                padding: 6px 10px !important;
            }

            th, td {
                white-space: nowrap;
            }
        }
    </style>
}
