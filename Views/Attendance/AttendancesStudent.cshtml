@{
    ViewData["Title"] = "الحضور و الغياب";
}

<div class="container mt-3">
    <div class="row mb-3">
        <div class="col-12 text-center">
            <h4>الحضور والغياب في الصف: @ViewBag.StdClass</h4>
            <a class="btn btn-outline-dark mt-2" asp-action="Index" asp-controller="Student">عودة</a>
        </div>
    </div>

    <hr>

    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center align-middle" id="attendancesTable">
            <thead class="table-dark">
                <tr>
                    <th>المادة</th>
                    <th>الحالة</th>
                    <th>التاريخ</th>
                    <th>العذر</th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            var idStudent = @Html.Raw(ViewBag.StdId);
            $('#attendancesTable').DataTable({
                "deferRender": true,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/Attendance/AttendancesStudentData?studentid="+idStudent,
                    "type": "GET",
                    "dataSrc": function (json) {
                        if (json.error) {
                            alert(json.error);
                            window.location.href = "/Account/Login";
                            return [];
                        }
                        return json.data;
                    }
                },
                "columns": [
                    { "data": "lectuerName"},
                    { 
                        "data": "attendanceStatus",
                            "render": function (data, type, row) {
                                if(data == '1')
                                {
                                    return "حضور";
                                }else if (data == '0')
                                {
                                    return "غياب";
                                }else if(data == 'm')
                                {
                                    return "غياب بعذر";
                                }
                                else
                                {
                                    return "قيمة غير صالحة";
                                }
                            }
                    },
                    { "data": "dateAndTime"},
                    { "data": "excuse"}
                ],
                "language": {
                    "search": "🔍بحث: ",
                    "lengthMenu": "عرض _MENU_ سجل",
                    "info": "عرض من  _START_ الى _END_ من اصل _TOTAL_ سجل",
                    "paginate": {
                        "next": "الصفحة التالية",
                        "previous": "الصفحة السابقة"
                    },
                    "zeroRecords": "لم يتم العثور على سجلات"
                }
            });
        });
    </script>
    <style>
        body {
            font-size: 14px;
        }

        @@media (max-width: 768px) {
            h4 {
                font-size: 16px;
            }

            table {
                font-size: 12px;
            }

            .btn {
                font-size: 12px !important;
                padding: 6px 10px !important;
            }

            th, td {
                white-space: nowrap;
            }
        }
    </style>



}
