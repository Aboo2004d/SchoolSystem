@model IEnumerable<SchoolSystem.Data.Attendance>

@{
    ViewData["Title"] = "Index";
}
<br>
<br>
<br>

<h1>Attendance To: @ViewBag.Teacher  </h1>


<div class="dropdown">
    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownNewMark" data-bs-toggle="dropdown" aria-expanded="false">
        Add Attendance
    </button>
    <ul class="dropdown-menu p-3" aria-labelledby="dropdownNewMark" style="min-width: 250px;">
        <li class="form-group mb-2">
            <label for="subjectDropdown">Choose Lectuer</label>
            <select id="subjectDropdown" class="form-control">
                <option value="">Choose</option>
                <!-- خيارات المواد هنا -->
            </select>
        </li>
        <li class="form-group">
            <label for="gradeDropdown">Choose Class</label>
            <select id="gradeDropdown" class="form-control">
                <option value="">Choose</option>
                <!-- خيارات الصفوف هنا -->
            </select>
        </li>
    </ul>
    <a class="btn btn-dark" asp-controller="Teacher" asp-action="Index"> Back</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Student
            </th>
            <th>
                Class
            </th>
            <th>
                Lectuer
            </th>
            <th>
                Status
            </th>
            <th>
                Date
            </th>
            <th>
                Excuse
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 @{
                    if(item.IdStudentNavigation.Name!=null){
                        var fullname = item.IdStudentNavigation.Name.Split(' ');
                        
                            var firstName = fullname.FirstOrDefault();
                            var lastName = fullname.LastOrDefault();
                            if(fullname.Length > 1){
                                lastName = fullname.LastOrDefault();
                                <p>@firstName - @lastName</p> 
                            }else{
                                @firstName
                            }
                        }
                        
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClassNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdLectuerNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Excuse)
            </td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Manager
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                        <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Details</a></li>
                        <li><a class="dropdown-item delete" asp-action="Delete" data-id="@item.Id">Delete</a></li>
                    </ul>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
<form asp-action="Delete" id="DeleteStudentAttendance" >
    <input type="hidden" name="Id" id="studentAttendanceid" />
</form>

@section Scripts {
    <script>
        $(function() {
            // تفعيل DataTable
            new DataTable('.table');
        });
    </script>
    <script>
        // التعامل مع زر الحذف
            $('.delete').click(function(e) {
                e.preventDefault();

                var btn = $(this);
                var id = btn.data('id');

                // استخدام SweetAlert لتأكيد الحذف
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // وضع الـ id في الحقل المخفي
                        $('#studentAttendanceid').val(id);

                        // تقديم النموذج
                        $('#DeleteStudentAttendance').submit();

                        // إظهار رسالة النجاح
                        Swal.fire({
                            title: "Deleted!",
                            text: "Student Teacher has been deleted.",
                            icon: "success"
                        });
                    }
                });
            });
    </script>
    <script>
        $(function () {
            var teacherId = @ViewBag.idTeacher // هنا تغيرنا الاسم من 'TeacherId' إلى 'id'
            var gradeId = null; // متغير لتخزين id الصف
            var subjectId = null; // متغير لتخزين id المادة
            // عند فتح القائمة (Bootstrap Dropdown)
            $('#dropdownNewMark').on('click', function () {
                // تحميل المواد عند أول مرة فقط (يمكنك تحسينه لاحقاً للتحميل مرة واحدة فقط)
                $.getJSON('/Attendance/GetLectuerForTeacher', { teacherId: teacherId }, function (data) {
                    var subjectDropdown = $('#subjectDropdown');
                    subjectDropdown.empty().append('<option value="">Choose</option>');

                    $.each(data, function (i, subject) {
                        subjectDropdown.append($('<option>').val(subject.id).text(subject.name));
                    });
                });
            });

            // عند اختيار مادة
            $('#subjectDropdown').change(function () {
                subjectId = $(this).val();
                if (!subjectId) return;

                $.getJSON('/Attendance/GetClassForSubject', { teacherId: teacherId, subjectId: subjectId }, function (data) {
                    var gradeDropdown = $('#gradeDropdown');
                    gradeDropdown.empty().append('<option value="">Choose</option>');

                    $.each(data, function (i, grade) {
                        gradeDropdown.append($('<option>').val(grade.id).text(grade.name));
                    });

                    $('#gradeContainer').show();
                });
            });

            // عند اختيار الصف
            $('#gradeDropdown').change(function () {
                gradeId = $(this).val();
                subjectId = $('#subjectDropdown').val();

                if (gradeId && subjectId) {
                    // الانتقال إلى صفحة الإنشاء مع القيم
                    window.location.href = `/Attendance/Create?idTeacher=${teacherId}&idLectuer=${subjectId}&idClass=${gradeId}`;
                    @*@Console.WriteLine($"Redirecting to /Attendance/Create?idTeacher={teacherId}&idLectuer={subjectId}&idClass={gradeId}");*@
                    console.log(`/Attendance/Create?idTeacher=${teacherId}&idLectuer=${subjectId}&idClass=${gradeId}`);
                }
            });
        });
    </script>
    <style>
        .dropdown-menu select {
            width: 100%;
        }
        /* العرض المضغوط: افتراضي لجميع الأجهزة */
        body {
            font-size: 10px;
        }

        /* إذا كان العرض أكبر من 768px (كمبيوتر أو لابتوب) */
        @@media (min-width: 768px) {
            body {
                font-size: 16px; /* حجم الخط الطبيعي */
            }

            table thead, table tbody {
                font-size: 14px;
            }

            .btn {
                font-size: 14px !important;
                padding: 6px 12px !important;
                height: auto !important;
                min-width: auto !important;
            }

            /* أي عناصر أخرى تم تصغيرها يمكن تعديلها هنا */
        }

    </style>


}

