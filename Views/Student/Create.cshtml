@model SchoolSystem.Data.Student

@{
    ViewData["Title"] = "إضافة طالب";
}

<h1 class="text-center mb-4">إضافة طالب جديد</h1>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">اسم الطالب</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="IdNumber" class="form-label">رقم الهوية</label>
                            <input asp-for="IdNumber" class="form-control" type="number" autocomplete="off" />
                            <span asp-validation-for="IdNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label">رقم الجوال</label>
                            <input asp-for="Phone" class="form-control" type="tel" autocomplete="off" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">الإيميل</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TheDate" class="form-label">تاريخ الميلاد</label>
                            <input asp-for="TheDate" class="form-control" type="date" />
                            <span asp-validation-for="TheDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="IdClass" class="form-label">الصف</label>
                            <select asp-for="IdClass" asp-items="ViewBag.Class" class="form-control select2"></select>
                            <span asp-validation-for="IdClass" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="City" class="form-label">المدينة</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Area" class="form-label">الحي</label>
                            <input asp-for="Area" class="form-control" />
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-outline-primary px-5">
                            <i class="bi bi-person-plus-fill"></i> إضافة
                        </button>
                        <a class="btn btn-outline-secondary px-4" asp-controller="Menegar" asp-action="ManagerMenegarStudentView">
                            <i class="bi bi-arrow-left-circle"></i> عودة
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "اختر الصف...",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
