@model SchoolSystem.Data.Student

@{
    ViewData["Title"] = "تعديل الطالب";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-warning text-dark rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-pencil-square me-2"></i> تعديل بيانات الطالب</h3>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-bold">الاسم:</label>
                        <input asp-for="Name" class="form-control" type="text" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="IdNumber" class="form-label fw-bold">رقم الهوية:</label>
                        <input asp-for="IdNumber" class="form-control" type="number" />
                        <span asp-validation-for="IdNumber" class="text-danger small"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Phone" class="form-label fw-bold">رقم الجوال:</label>
                        <input asp-for="Phone" class="form-control" type="text" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-bold">البريد الإلكتروني:</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TheDate" class="form-label fw-bold">تاريخ الميلاد:</label>
                        <input asp-for="TheDate" class="form-control" type="date" />
                        <span asp-validation-for="TheDate" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="IdClass" class="form-label fw-bold">الصف:</label>
                        <select asp-for="IdClass" class="form-control select2" asp-items="@ViewBag.Class"></select>
                        <span asp-validation-for="IdClass" class="text-danger small"></span>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-center gap-2">
                    <button type="submit" class="btn btn-outline-success">
                        <i class="bi bi-save-fill me-1"></i> حفظ
                    </button>
                    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id">
                        <i class="bi bi-arrow-return-left me-1"></i> عودة
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Search for a student...",
                allowClear: true
            });
        });
    </script>
}
