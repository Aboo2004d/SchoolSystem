@model SchoolSystem.Data.StudentLectuer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Student In Lectuer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="IdStudent" class="control-label"></label>
                <select asp-for="IdStudent" class="form-control" asp-items="ViewBag.IdStudent"></select>
                <span asp-validation-for="IdStudent" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="IdLectuer" class="control-label"></label>
                <select asp-for="IdLectuer" class="form-control" asp-items="ViewBag.IdLectuer"></select>
                <span asp-validation-for="IdLectuer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-dark" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
